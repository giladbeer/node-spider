{
    "compilerOptions": {
        "moduleResolution": "node",
        "removeComments": false,
        "sourceMap": true,
        "target": "es2018",
        "outDir": "dist",
        "declaration": true,
        "strict": true,
        "module": "esnext",
        "noEmitOnError": true,
        "lib": [
            "es2017",
            "dom"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "*.test.ts"
    ]
}